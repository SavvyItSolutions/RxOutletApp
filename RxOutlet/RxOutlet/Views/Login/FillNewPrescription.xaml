                       HeightRequest="50"
                       Aspect="AspectFit"
                       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenGalleryCommand}" />
                    </Image.GestureRecognizers>
                </Image>

            </Grid>

